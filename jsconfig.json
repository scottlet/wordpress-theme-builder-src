{
  "extends": "../jsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "target": "es2020",
    "module": "es2020",
    "moduleResolution": "Bundler",
    "lib": ["es2020", "dom"],
    "checkJs": true,
    "strict": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "jsx": "preserve",
    "paths": {
      "~/*": ["./js/modules/*"]
    },
    "types": ["node", "react"]
  },
  "include": ["js/**/*"],
  "exclude": ["node_modules"]
}
